<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="16dp" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:text="Login / Sign up" android:textSize="20sp" android:layout_marginBottom="12dp"/>
        <EditText android:id="@+id/etPhone" android:hint="Phone with country code e.g. +919876..." android:inputType="phone" />
        <EditText android:id="@+id/etPin" android:hint="6-digit PIN" android:inputType="numberPassword" android:maxLength="6" android:layout_marginTop="8dp"/>
        <EditText android:id="@+id/etName" android:hint="Your name (new users)" android:layout_marginTop="8dp"/>
        <TextView android:id="@+id/tvStatus" android:layout_marginTop="8dp" android:textColor="#080"/>
        <LinearLayout android:orientation="horizontal" android:layout_marginTop="12dp">
            <Button android:id="@+id/btnNext" android:text="Login" android:layout_width="0dp" android:layout_weight="1"/>
            <Space android:layout_width="8dp" android:layout_height="wrap_content"/>
            <Button android:id="@+id/btnCreate" android:text="Create" android:layout_width="0dp" android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>