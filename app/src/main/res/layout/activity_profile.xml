<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="16dp" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:id="@+id/tvUserId" android:text="User ID:" android:textSize="16sp" />
        <TextView android:id="@+id/tvBalance" android:text="Balance: ₹0.00" android:layout_marginTop="8dp"/>
        <EditText android:id="@+id/etBankName" android:hint="Bank Name" android:layout_marginTop="8dp"/>
        <EditText android:id="@+id/etAccountNumber" android:hint="Account Number" android:layout_marginTop="8dp"/>
        <EditText android:id="@+id/etIfsc" android:hint="IFSC Code" android:layout_marginTop="8dp"/>
        <EditText android:id="@+id/etUpi" android:hint="UPI (optional)" android:layout_marginTop="8dp"/>
        <Button android:id="@+id/btnSaveBank" android:text="Save Bank Info" android:layout_marginTop="12dp"/>
        <Button android:id="@+id/btnWithdraw" android:text="Withdraw ₹100" android:layout_marginTop="8dp"/>
        <Button android:id="@+id/btnWithdrawHistory" android:text="Withdraw History" android:layout_marginTop="8dp"/>
    </LinearLayout>
</ScrollView>